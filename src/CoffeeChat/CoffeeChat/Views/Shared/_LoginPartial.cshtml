@using Microsoft.AspNetCore.Identity
@using CoffeeChat.Models
@using CoffeeChat.Helpers
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Manage" title="Manage">Hello <span class="text-warning">@User.Identity.Name</span>!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
</ul>
